<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.somaro.loginregister.gui.UserAreaActivity"
    android:weightSum="1">

    <TextView
        android:id="@+id/tvWelcomeMsg"
        android:layout_width="match_parent"
        android:layout_height="38dp"

        android:text="@string/textview"
       />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        tools:layout_editor_absoluteX="17dp"
        tools:layout_editor_absoluteY="268dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">

            <Button
                android:id="@+id/btnTakePhoto"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/holo_orange_light"
                android:elevation="17dp"
                android:onClick="onTakePhotoClick"
                android:text="@string/lblTakePhoto" />

            <Button
                android:id="@+id/btnShowSaved"
                android:layout_width="154dp"
                android:layout_height="65dp"

                android:layout_weight="1"
                android:background="@android:color/holo_green_dark"
                android:elevation="6dp"
                android:onClick="onImageGalleryClick"
                android:text="@string/lblShowSaved"
                android:visibility="visible" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
